@model TrabajoFinalActualizado.Models.MemoryUser
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}



<html>
    <head>
        <link rel="stylesheet" href="~/css/formstyle.css" />
        
        <script src="https://kit.fontawesome.com/61ab311a79.js" crossorigin="anonymous"></script>

    </head>
    <body>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="row-caja">
                    <div class="col-md-8 offset-2">
                        <form asp-controller="Pelicula" asp-action="Comprobacion" method="post">

                            <div class="titulo">
                                <h1 class="text-center mt-5">Log in</h1>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mt-3">
                                <label asp-for="UserName" class="control-label">Usuario<sup>*</sup></label>
                                <input asp-for="UserName" class="form-control" />
                                <i class="fa-solid fa-id-badge"></i>
                                <span asp-validation-for="UserName" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Password" class="control-label">Contraseña<sup>*</sup></label>
                                <input type="password" asp-for="Password" class="form-control" />
                                <i class="fa-solid fa-key" aria-hidden="true"></i>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button class="btn btn-primary btn-block btn-custom mt-4" type="submit" value="btn" name="iniciar">
                                    <span class="fa fa-sign-in"></span> Log in
                                </button>
                            </div>

                            <div class="form-group mt-4 mb-4">
                                <a class="text-dark float-start" asp-controller="" asp-action="" onclick="Atras()">
                                    <span class="fa-solid fa-chevron-left"></span>Atras
                                </a>
                                <a class="text-dark float-end" asp-controller="CargarSesion" asp-action="LoginAdmin">
                                    <span class="icon-user-tie"></span> Admin
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
    <script>
        function Atras() {
            window.history.back();
        }
    </script>
</html>