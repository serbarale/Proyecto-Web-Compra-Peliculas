@model TrabajoFinalActualizado.Models.TbPelicula
@{
    ViewData["Title"] = "Editar película ";
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/formstyle.css" />
        <script src="https://kit.fontawesome.com/61ab311a79.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    </head>
    <body>
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="row-caja">
                    <div class="col-md-8 offset-2">
                        <form asp-controller="Mantenimiento" asp-action="EditarPelicula" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="titulo">
                                <h1 class="text-center mt-5">Editar Película Id: @Model.IdPelicula</h1>
                            </div>
                            <div class="form-group mt-3">
                                <input asp-for="IdPelicula" type="hidden" class="form-control" />
                                <span asp-validation-for="Titulo" typeof="" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Titulo" class="control-label">Título<sup>*</sup></label>
                                <input asp-for="Titulo" class="form-control" />
                                <i class="fa-solid fa-film"></i>
                                <span asp-validation-for="Titulo" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="GeneroId" class="control-label">Genero Id<sup>*</sup></label>
                                <input asp-for="GeneroId" type="number" class="form-control" />
                                <i class="fa-solid fa-masks-theater"></i>
                                <span asp-validation-for="GeneroId" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Duracion" class="control-label">Duración (mins)<sup>*</sup></label>
                                <input asp-for="Duracion" type="number" class="form-control" />
                                <i class="fa-solid fa-hourglass-end"></i>
                                <span asp-validation-for="Duracion" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Sinopsis" class="control-label">Sinopsis<sup>*</sup></label>
                                <input asp-for="Sinopsis" class="form-control" />
                                <i class="fa-solid fa-align-left"></i>
                                <span asp-validation-for="Sinopsis" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="FechaLanzamiento" class="control-label">Fecha de lanzamiento<sup>*</sup></label>
                                <input asp-for="FechaLanzamiento" type="date" class="form-control" />
                                <i class="fa-regular fa-calendar"></i>
                                <span asp-validation-for="FechaLanzamiento" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Precio" class="control-label">Precio<sup>*</sup></label>
                                <input asp-for="Precio" type="number" step="0.01" class="form-control" />
                                <i class="fa-solid fa-dollar-sign"></i>
                                <span asp-validation-for="Precio" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="ImagenUrl" class="control-label">URL Imagen<sup>*</sup></label>
                                <input asp-for="ImagenUrl" class="form-control" />
                                <i class="fa-solid fa-link"></i>
                                <span asp-validation-for="ImagenUrl" class="text-danger"></span>
                            </div>
                            <div class="form-group text-center mt-3" style="margin-top:30px; margin-bottom:30px;">
                                <img id="peliImgpreview" style="max-width: 150px" />
                            </div>

                            <div class="form-group mt-4 mb-4">
                                <input type="submit" value="Editar" class="btn btn-outline-success" />
                                <a class="btn btn-outline-secondary" asp-action="Index">Mostrar Todo</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>


@section Scripts{
    <script>

        $(document).ready(function () {
            var output = document.getElementById('peliImgpreview');
            output.src = $("#ImagenUrl").val();
        })

        $("#ImagenUrl").on("change", function () {
            var output = document.getElementById('peliImgpreview');
            output.src = $(this).val();
        })
    </script>
}