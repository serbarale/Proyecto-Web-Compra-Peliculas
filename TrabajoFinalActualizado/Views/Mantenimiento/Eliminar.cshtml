@model TrabajoFinalActualizado.Models.TbPelicula
@{
    ViewData["Title"] = "Eliminar película ";
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/perfilmain.css" />
        <script src="https://kit.fontawesome.com/61ab311a79.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="row-caja">
                    <div class="col-md-8 offset-2">
                        <form asp-controller="" asp-action="">
                            <div class="titulo">
                                <h1 class="text-center mt-5 mb-3">¿Está seguro de eliminar @Model.Titulo?</h1>
                            </div>
                            <div class="form-group text-center">
                                <img style="max-width: 150px" id="ImgPreview" />
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="ImagenUrl" class="control-label"></label>
                                <input asp-for="ImagenUrl" class="form-control" readonly />
                                <i class="fa-solid fa-link"></i>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Titulo" class="control-label"></label>
                                <input asp-for="Titulo" class="form-control" readonly />
                                <i class="fa-solid fa-clapperboard"></i>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Sinopsis" class="control-label"></label>
                                <input asp-for="Sinopsis" class="form-control" readonly />
                                <i class="fa-solid fa-align-left"></i>

                            </div>

                            <div class="form-group mt-3">
                                <form asp-controller="Mantenimiento" asp-action="EliminarPelicula" asp-route-id="@Model.IdPelicula" method="post">
                                    <input type="hidden" asp-for="IdPelicula" />
                                    <input type="submit" value="Eliminar" class="btn btn-danger" />
                                    <a class="btn btn-outline-secondary" asp-action="Index">Mostrar todo</a>
                                </form>

                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </body>
</html>
@section Scripts{
    <script>
        $(document).ready(function () {
            var output = document.getElementById('ImgPreview');
            output.src = $("#ImagenUrl").val();
        })
    </script>
    }
