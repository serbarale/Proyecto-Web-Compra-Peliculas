@model TrabajoFinalActualizado.Models.TbPelicula
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
	<head>
		<link rel="stylesheet" href="~/css/listamantenimiento.css">
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
	</head>
	<body>
		<header>
			<h1 style="text-align:center; color:white;">CARTELERA DE BUY MY FILMS</h1>
		</header>
		
    <div class="row">
        <div class="col-md-8 offset-2">
            <div class="card mb-12">
                <div class="row g-0">
                    <div class="col-md-12">
                        <div class="card-header text-white" style="background-color:#5027d5";>
                            <p class="card-text">
                                <h5 class="card-title">
                                    @Model.Titulo
                                </h5>
                            </p>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <img src="@Model.ImagenUrl" width="100%" alt="@Model.Titulo">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <p class="card-text">@Model.Sinopsis</p>
                            <p class="card-text"><b>ID Película: </b>@Model.IdPelicula</p>
                            <p class="card-text"><b>Género: </b>@ViewData["gen"]</p>
                            <p class="card-text"><b>ID Género: </b>@Model.Genero</p>
                            <p class="card-text"><b>Duración: </b>@Model.Duracion mins</p>
                            <p class="card-text"><b>Fecha de Lanzamiento: </b>@Model.FechaLanzamiento?.ToShortDateString()</p>
                            <p class="card-text"><b>Precio: </b> s/.@Model.Precio</p>
                            <form asp-controller="Pelicula" asp-action="pasarTodo" method="post">
                                <input type="hidden" name="txtcodigo" value="@Model.IdPelicula" />
                                <input type="hidden" name="txtTitulo" value="@Model.Titulo" />
                                <input type="hidden" name="txtGenero" value="@Model.Genero" />
                                <input type="hidden" name="txtDuracion" value="@Model.Duracion" />
                                <input type="hidden" name="txtSinopsis" value="@Model.Sinopsis" />
                                <input type="hidden" name="txtFecha" value="@Model.FechaLanzamiento" />
                                <input type="hidden" name="txtprecio" value="@Model.Precio" />
                                <input type="hidden" name="txtImagen" value="@Model.ImagenUrl" />
								<button type="submit" class="btn btn-primary" value="btn" name="grabar" data-toggle="modal" data-target="#exampleModal">
									Comprar
								</button>
                            </form>
                        </div>
                    </div>
                    <div class="col-md-12">
                        <div class="card-footer">
                            <p class="card-text">
                                <a class="btn btn-outline-primary float-right" asp-action="Index">
                                    Regresar
                                </a>
                            </p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

	</body>

</html>