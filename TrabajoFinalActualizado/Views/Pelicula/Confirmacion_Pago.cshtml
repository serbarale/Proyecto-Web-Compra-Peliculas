@model TrabajoFinalActualizado.Models.DatosDelPago
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
<head>
    <link rel="stylesheet" href="~/css/formstyle.css" />
    <script src="https://kit.fontawesome.com/61ab311a79.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
</head>
<body>
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="row-caja">
                <div class="col-md-8 offset-2">
                    <form asp-controller="Facturacion" asp-action="Facturacion" method="post">
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="titulo">
                            <h1 class="text-center mt-5"> Monto a Pagar:</h1>
                            <h1 class="text-center mt-5" style="color:white;">S/ @ViewData["MontoFinal"]</h1>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="tipoDeTarjetaPPagar" class="control-label">Tipo de pago<sup>*</sup></label>
                            <select asp-for="tipoDeTarjetaPPagar" class="form-control">
                                <option value="">Selecciona una opción</option>
                                <option value="TARJETA DE LA EMPRESA">TARJETA DE LA EMPRESA</option>
                                <option value="VISA">VISA</option>
                                <option value="MASTER CARD">MASTER CARD</option>
                                <option value="CLUB LIGHT">CLUB LIGHT</option>
                                <option value="AMERICAN EXPRESS">AMERICAN EXPRESS</option>
                                
                            </select>
                            <span asp-validation-for="tipoDeTarjetaPPagar" class="text-danger"></span>
                        </div>
                        <div class="titulo">
                            <h6 class="text-center mt-3 mb-3" style="font-weight:bold; color:black">(Ingresar SOLO SI NO tienes la tarjeta de la empresa)</h6>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="numeroTarjeta" class="control-label">Número de Tarjeta<sup>*</sup></label>
                            <input asp-for="numeroTarjeta" type="text" class="form-control" placeholder="1234 1234 1234"/>
                            <i class="fa-solid fa-credit-card"></i>
                            <span asp-validation-for="numeroTarjeta" class="text-danger"></span>
                        </div>
                        <div class="form-group mt-3">
                            <label asp-for="seguridadTarjeta" class="control-label">Código CVV<sup>*</sup></label>
                            <input asp-for="seguridadTarjeta" type="text" class="form-control" placeholder="***" />
                            <i class="bi bi-credit-card-2-front-fill"></i>
                            <span asp-validation-for="seguridadTarjeta" class="text-danger"></span>
                        </div>
                        <div class="text-center">
                            <button class="btn btn-primary btn-block btn-custom mt-4" type="submit" value="btn" name="guardar" data-toggle="modal" data-target="#exampleModal">
                                <span class="fa-solid fa-right-long"></span> Continuar
                            </button>
                        </div>
                        <div class="form-group mt-4 mb-4">
                            <a class="text-dark float-start" asp-controller="Pelicula" asp-action="carritoCompras">
                                <span class="fa-solid fa-chevron-left"></span>Volver
                            </a>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</body>


</html>