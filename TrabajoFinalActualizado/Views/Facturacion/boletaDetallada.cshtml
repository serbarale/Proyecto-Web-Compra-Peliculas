@model IEnumerable<TrabajoFinalActualizado.Models.TbDetallecompra>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/boletadetallada.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <a asp-controller="Facturacion" asp-action="verFacturas" asp-route-id="@ViewData["idClienteeee"]" style="text-align:center" class="btn btn-primary">VOLVER ATRAS</a>
        <h1>                                </h1>
        <div class="card text-center" style="width: 30rem; height:auto; margin: 0 auto;">
            <div class="card-body">
                <h5 class="card-title">BUY MY FILMS</h5>
                <h6 class="card-title">RUC:79314052486</h6>
                <h6 class="card-title">Direccion: Calle Siempre Vivas 245</h6>
                <h6 class="card-title">Telefono: 999 999 999</h6>
                <h6 class="card-title">Email: BuyMyFilms@gmail.com</h6>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <h6 class="card-title">Fecha: @ViewData["fecha"]</h6>
                <h4 class="card-title">B-@ViewData["idFac"]</h4>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <h6 class="card-title">Cliente: @ViewData["nom"] @ViewData["ape"]</h6>
                <h6 class="card-title">Correo: @ViewData["corr"]</h6>
                <h6 class="card-title">Direccion: @ViewData["dir"]</h6>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <table class="table table-bordered">
                    <tr>
                        <td scope="col">CANT.</td>
                        <td scope="col">PRECIO S/.</td>
                        <td scope="col">ID PELICULA</td>
                        <td scope="col">TOTAL S/.</td>
                    </tr>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td scope="col">@item.Cantidad</td>
                            <td scope="col">S/ @item.PrecioUnitario</td>
                            <td scope="col">@item.IdPelicula</td>
                            <td scope="col">@item.SubTotal</td>
                        </tr>
                    }
                </table>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <h6 class="card-title">TOTAL A PAGAR: S/. @ViewData["total"]</h6>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <h6 class="card-title">Forma de Pago: @ViewData["tipoP"]</h6>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <p class="card-text text-dark">Gracias por su compra</p>
                <h8>                                        </h8>
            </div>
        </div>
    </body>
</html>