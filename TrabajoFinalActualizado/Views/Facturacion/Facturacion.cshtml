@model IEnumerable<TrabajoFinalActualizado.Models.VentaTemporal>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}

<html>
    <head>
        <link rel="stylesheet" href="~/css/estiloParaCadaPelicula.css">
        <link rel="stylesheet" href="~/css/boletadetallada.css">
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
    </head>
    <body>
        <div class="card text-center" style="width: 30rem; height:58rem; margin: 0 auto;">
            <div class="card-body">
                <h5 class="card-title">BUY MY FILMS</h5>
                <h6 class="card-title">RUC:79314052486</h6>
                <h6 class="card-title">Direccion: Calle Siempre Vivas 245</h6>
                <h6 class="card-title">Telefono: 999 999 999</h6>
                <h6 class="card-title">Email: ByMyFilms@gmail.com</h6>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <h6 class="card-title">Fecha: @ViewData["fecha"]</h6>
                <h4 class="card-title">B-@ViewData["numeroFac"]</h4>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <h6 class="card-title">Cliente: @ViewData["nom"] @ViewData["ape"]</h6>
                <h6 class="card-title">Correo: @ViewData["corr"]</h6>
                <h6 class="card-title">Direccion: @ViewData["dir"]</h6>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <table class="table table-bordered">
                    <tr>
                        <td scope="col">CANT.</td>
                        <td scope="col">PRECIO S/.</td>
                        <td scope="col">PELICULA</td>
                        <td scope="col">TOTAL S/.</td>
                    </tr>
                    @foreach(var item in Model)
                {
                    <tr>
                        <td scope="col">@item.cantidadV</td>
                        <td scope="col">@item.precioV</td>
                        <td scope="col">@item.nombrePeliculaV</td>
                        <td scope="col">@item.totalV</td>
                    </tr>
                }
                </table>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <h6 class="card-title">TOTAL A PAGAR: S/. @ViewData["Total"]</h6>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <h6 class="card-title">FORMA DE PAGO</h6>
                <h6 class="card-title">@ViewData["FormaPagoo"]</h6>
                <h8>                                        </h8>
                <h6>-----------------------------------------</h6>
                <h8>                                        </h8>
                <a asp-controller="Facturacion" asp-action="limpiarTodo" class="btn btn-primary">PROCESAR</a>
                <h8>                                        </h8>
                <p class="card-text text-dark">Gracias por su compra</p>
                <p class="card-text text-dark">                     </p>
                <h6>-----------------------------------------</h6>
                <p class="card-text text-dark">                     </p>
                <p class="card-text text-dark">Todas sus compras realizadas los podra verificar en su</p>
                <p class="card-text text-dark">PERFIL</p>
            </div>
        </div>
    </body>
</html>