@model TrabajoFinalActualizado.Models.TbCliente
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Mi Perfil ";

}
<html>
    <head>
    <link rel="stylesheet" href="~/css/formstyle.css" />
    <script src="https://kit.fontawesome.com/61ab311a79.js" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>

    </head>
    <body>
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="row-caja">
                    <div class="col-md-8 offset-2">
                        <form asp-controller="Perfil" asp-action="pasarInfNueva" method="post">
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="titulo">
                                <h1 class="text-center mt-5"> Modificar Perfil</h1>
                            </div>
                            <div class="form-group mt-3">
                                <input asp-for="IdCliente" type="hidden" class="form-control" />
                                <span asp-validation-for="IdCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="NombreCliente" class="control-label">Nombres<sup>*</sup></label>
                                <input asp-for="NombreCliente" class="form-control" />
                                <i class="fa-solid fa-user"></i>
                                <span asp-validation-for="NombreCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="ApellidoCliente" class="control-label">Apellidos<sup>*</sup></label>
                                <input asp-for="ApellidoCliente" class="form-control" />
                                <i class="fa-solid fa-user"></i>
                                <span asp-validation-for="ApellidoCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="UsuarioCliente" class="control-label">Usuario<sup>*</sup></label>
                                <input asp-for="UsuarioCliente" class="form-control" />
                                <i class="fa-solid fa-image-portrait"></i>
                                <span asp-validation-for="UsuarioCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="PasswordCliente" class="control-label">Contraseña<sup>*</sup></label>
                                <input asp-for="PasswordCliente" class="form-control" />
                                <i class="fa-solid fa-key"></i>
                                <span asp-validation-for="PasswordCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="DireccionCliente" class="control-label">Direccion<sup>*</sup></label>
                                <input asp-for="DireccionCliente" class="form-control" />
                                <i class="fa-solid fa-location-dot"></i>
                                <span asp-validation-for="DireccionCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="CorreoCliente" class="control-label">Correo<sup>*</sup></label>
                                <input asp-for="CorreoCliente" class="form-control" />
                                <i class="fa-solid fa-at"></i>
                                <span asp-validation-for="CorreoCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="ProvinciaCliente" class="control-label">Provincia<sup>*</sup></label>
                                <select asp-for="ProvinciaCliente" class="form-control">
                                    <option value="">Selecciona su nueva opción</option>
                                    <option value="LIMA">LIMA</option>
                                </select>
                                <span asp-validation-for="ProvinciaCliente" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="DistritoCliente" class="control-label">Distrito<sup>*</sup></label>
                                <select asp-for="DistritoCliente" class="form-control">
                                    <option value="">Selecciona su nueva opción</option>
                                    <option value="SAN ISIDRO">SAN ISIDRO</option>
                                    <option value="LINCE">LINCE</option>
                                    <option value="SURCO">SURCO</option>
                                    <option value="MIRAFLORES">MIRAFLORES</option>
                                    <option value="LA MOLINA">LA MOLINA</option>
                                </select>
                                <span asp-validation-for="DistritoCliente" class="text-danger"></span>
                            </div>

                            <div class="form-group mt-4 mb-4">
                                <input type="submit" value="Modificar" class="btn btn-outline-success float-right" />
                                <a class="btn btn-outline-secondary" asp-controller="Perfil" asp-action="Perfil">Atras</a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
         </div>
    </body>
</html>