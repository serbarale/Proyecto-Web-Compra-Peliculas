@model TrabajoFinalActualizado.Models.TbTarjetaEmpresa
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <head>
        <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" />
        <link rel="stylesheet" href="~/css/tarjetaobtenida.css" />
    </head>
    <body>
    <div class="row">
        <div class="col-md-6 offset-3">
            <div class="row-caja">
                <div class="col-md-8 offset-2">
                    <div class="titulo text-center">
                        <h1 class="text-center mt-3">Numero de Tarjeta</h1>
                        <h2 class="text-center mt-3">@Model.NumeroTarjeta</h2>

                    </div>
                    <div class="titulo text-center">
                        <h1 class="text-center mt-3">SALDO : S/ @ViewData["sumaR"]</h1>
                    </div>    
                    <div class="titulo text-center">
                        <h5 class="text-center mt-3">¿No tienes suficinete dinero?</h5>
                        <form asp-controller="Perfil" asp-action="RecargarTarjeta" method="post">
                            <input type="hidden" name="txtnumTar" value="@Model.NumeroTarjeta" />
                            <button type="submit" class="btn btn-primary mt-2" value="btn" name="iniciar"
                                    data-toggle="modal" data-target="#exampleModal">
                                RECARGA
                            </button>
                        </form>
                    </div>
                    <div class="titulo text-center">
                        <h5 class="text-center mt-3">HISTORIAL DE RECARGAS</h5>
                        <a class="btn btn-primary mt-2 text-center" asp-controller="Perfil" asp-action="HistorialDeRecargas">VER HISTORIAL</a>
                    </div>
                    <div class="titulo text-center">
                        <h5 class="text-center mt-3">Gracias por obtener nuestra tarjeta</h5>
                        <a class="btn btn-primary" asp-controller="Perfil" asp-action="Perfil">VOLVER</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
       
    </body>
</html>