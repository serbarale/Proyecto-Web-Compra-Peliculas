@model IEnumerable<TrabajoFinalActualizado.Models.TodasMisPeliculas>
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
    ViewData["Title"] = "Mis Peliculas ";
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/listamantenimiento.css" />
        <script src="https://kit.fontawesome.com/61ab311a79.js" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="mt-5 mb-5">
            <h1>
            <i class="fa-solid fa-film"></i> Mis Películas
            </h1>
        </div>
        <table>
            <thead class="titulos">
                <tr class="text-center">
                    <th class="col-1">Codigo</th>
                    <th class="col-2">Titulo</th>
                    <th class="col-2">Cantidad</th>
                    <th class="col-2">Imagen</th>
                </tr>
            </thead>
            <tbody id="myTable">
                @foreach (var item in Model)
                {
                    <tr class="mt-2 mb-2 fila-cuerpo">
                    
                        <td class="align-middle text-center py-2">
                            @item.IdP
                        </td>
                        <td class="align-middle text-center py-2">
                            @item.nombreP
                        </td>
                        <td class="align-middle text-center py-2">
                            @item.cantidadP
                        </td>
                        <td class="align-middle text-center py-2">
                            <img src="@item.imagenP" style="width: 5rem; height: 8rem;" />
                        </td>
                    </tr>
                }
            </tbody>

        </table>
        <div class="mt-5">
            <a class="btn btn-primary" asp-controller="Perfil" asp-action="Perfil"> VOLVER ATRAS </a>
        </div>
    </body>
</html>
