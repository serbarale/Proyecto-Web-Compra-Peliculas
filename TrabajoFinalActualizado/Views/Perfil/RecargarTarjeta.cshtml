@model TrabajoFinalActualizado.Models.TbTarjetaRecarga
@*
    For more information on enabling MVC for empty projects, visit https://go.microsoft.com/fwlink/?LinkID=397860
*@
@{
}
<html>
    <head>
        <link rel="stylesheet" href="~/css/formstyle.css" />
        <script src="https://kit.fontawesome.com/61ab311a79.js" crossorigin="anonymous"></script>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ENjdO4Dr2bkBIFxQpeoTz1HIcje39Wm4jDKdf19U8gI4ddQ3GYNS7NTKfAdVQSZe" crossorigin="anonymous"></script>
    </head>
    <body>
        <div class="row">
            <div class="col-md-6 offset-3">
                <div class="row-caja">
                    <div class="col-md-8 offset-2">
                        <form asp-controller="Perfil" asp-action="Comprobacion" method="post">

                            <div class="titulo">
                                <h1 class="text-center mt-5">Recargar tarjeta</h1>
                            </div>
                            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                            <div class="form-group mt-3">
                                <label asp-for="FormaRecarga" class="control-label">Elige el metodo de recarga<sup>*</sup></label>
                                <select asp-for="FormaRecarga" class="form-control">
                                    <option value="">Selecciona una opción</option>
                                    <option value="MASTER CARD">MASTER CARD</option>
                                    <option value="VISA">VISA</option>
                                    <option value="LIGHT CLUB">LIGHT CLUB</option>
                                    <option value="AAAA">AAAA</option>
                                    <option value="BBBB">BBBB</option>
                                </select>
                                <span asp-validation-for="FormaRecarga" class="text-danger"></span>
                            </div>
                            <div class="form-group mt-3">
                                <label class="control-label">Número de Tarjeta<sup>*</sup></label>
                                <input class="form-control" id="formGroupExampleInput4" name="tarjeta" placeholder="1234 1234 1234">
                                <i class="fa-solid fa-credit-card"></i>
                            </div>
                            <div class="form-group mt-3">
                                <label asp-for="Cantidad" class="control-label">Monto a recargar<sup>*</sup></label>
                                <input asp-for="Cantidad" type="number" step="0.01" class="form-control" />
                                <i class="fa-solid fa-dollar-sign"></i>
                                <span asp-validation-for="Cantidad" class="text-danger"></span>
                            </div>
                            <div class="text-center">
                                <button class="btn btn-primary btn-block btn-custom mt-4" type="submit" value="btn" ata-toggle="modal" data-target="#exampleModal">
                                    <span class="fa-solid fa-money-bill-transfer"></span> Recargar
                                </button>
                            </div>
                            <div class="form-group mt-4 mb-4">
                                <a class="text-dark float-start" asp-controller="Perfil" asp-action="Perfil">
                                    <span class="fa-solid fa-chevron-left"></span>Atras
                                </a>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
        
    </body>

</html>